                                    @Html.ValidationMessageFor(model => model.CREDIT_CARD, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 col-xs-offset-1 col-sm-offset-1 signup-box" style="margin-top: 20px;">
                                <div class="col-sm-3 col-sm-offset-4 col-md-2 col-lg-2 col-lg-offset-4 col-md-offset-4">
                                    <input type="submit" value="Edit" class="btn btn-default" />
                                </div>
                                <div class="col-sm-3 col-md-1 col-lg-1" style="margin-left: -40px;">
                                    @Html.ActionLink("Back", "Details", "MEMBERs", new { id = Model.MEMBER_ID}, new { @type = "submit", @class = "btn btn-default" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <footer class="footer text-center" style="padding-bottom:10px;">
                <div class="container">
                    <span>copy right &copy; event organice <br /> contect us event.organice@gmail.com, 0838698659</span>
                </div>
            </footer>
        </body>
          }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


