                                </div>
                                <div class="col-sm-10 col-md-4 col-lg-11 ">
                                    @Html.TextAreaFor(model => model.ADDRESS, new { @class = "form-control", @placeholder = "Address", @maxlength = "100" })
                                    @Html.ValidationMessageFor(model => model.ADDRESS, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 col-xs-offset-1 col-sm-offset-1 signup-box">
                                <div class="col-sm-2 col-md-2 col-lg-2 signup-text">
