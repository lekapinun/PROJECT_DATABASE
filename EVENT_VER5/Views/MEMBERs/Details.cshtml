@model EVENT_VER5.Models.MEMBER

@{
    ViewBag.Title = "Details";

}
@if (Session["username"] != null)
{
    <body>
        <div class="section">
            <div class="container">
                <div class="row">
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
