                            <div class="item">
                                <img src="~/Content/img/Ad5.png">
                            </div>

                        </div>

                        <!-- Controls -->
                        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>


                </div>
            </div>

        </div>
    </div>


    <!-- mmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmm -->



    <div class="section">
        <div class="container">
            <div class="row down">
                <div class="col-md-2 text-center" style="color: #A82221;"> <h4> Sort by :</h4></div>
                <div class="col-md-10">
                    <div class="row">
                        <div class="col-xs-2 col-md-2 ">
                            <a href="@Url.Action("Index2","LOCATIONs",new { category = "All"})" class="col-xs-12 col-md-12 btn btn1 button-site1">All</a>
                        </div>
                        <div class="col-xs-2 col-md-2">
                            <a href="@Url.Action("Index2","LOCATIONs",new { category = "Indoor"})" class="col-xs-12 col-md-12 btn btn1 button-site1 ">Indoor</a>
                        </div>
                        <div class="col-xs-2 col-md-2">
                            <a href="@Url.Action("Index2","LOCATIONs",new { category = "Outdoor"})" class="col-xs-12 col-md-12 btn btn1 button-site1 ">Outdoor</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- mmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmm -->


    <div class="section">
        <div class="container-fluid">
            <div class="row down ">
                <div class="col-md-12">
                    <div class="section">
                        <div class="container">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <a href="@Url.Action("Details","LOCATIONs",new { id=item.ID_LOCATION })" class="col-md-4" style="color: #A82221;">
                                        <img src=@item.PICTURE class="img-responsive">
                                        <h2>@item.LOCATION_NAME</h2>
                                        <p>
                                            @for (int i = 0; i < 30 && i < @item.DETAIL.Length; i++)
                                            {
                                                @item.DETAIL[i]
                                            }
                                            ...
                                        </p>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>





    @* }*@


    <footer class="footer text-center" style="padding-bottom:10px;">
        <div class="container">
            <span>copy right &copy; event organice <br /> contect us event.organice@gmail.com, 0838698659</span>
        </div>
    </footer>

</body>

