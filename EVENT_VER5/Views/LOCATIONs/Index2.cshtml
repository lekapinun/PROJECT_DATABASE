                            <div class="item active">
                                <img src="~/Content/img/Ad1.png">
                            </div>

                            <div class="item">
                                <img src="~/Content/img/Ad2.png">
                            </div>

                            <div class="item">
                                <img src="~/Content/img/Ad3.png">

                            </div>

